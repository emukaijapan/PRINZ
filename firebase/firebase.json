{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "cleanUrls": true,
        "rewrites": [
            { "source": "/privacy", "destination": "/privacy-policy.html" }
        ]
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs20"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    }
}